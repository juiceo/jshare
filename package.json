{
    "private": true,
    "name": "@jshare/monorepo",
    "author": "Juuso Lappalainen <hello@juiceo.me>",
    "description": "Monorepo for the JShare app",
    "scripts": {
        "dev": "pnpm dev:kill && supabase start && turbo watch dev",
        "dev:kill": "npx kill-port-process 3000 8081",
        "dev:storybook": "supabase start && turbo watch dev:storybook",
        "dev:mobile": "supabase start && turbo watch dev --filter=\"{./apps/mobile}...\"",
        "dev:server": "supabase start && turbo watch dev --filter=\"{./apps/server}...\"",
        "start:dev": "pnpm --filter=@jshare/mobile start:dev",
        "lint": "turbo lint",
        "typecheck": "turbo typecheck --ui stream",
        "test": "turbo test --ui stream",
        "build": "turbo build --ui stream",
        "build:server": "turbo build --filter=\"{./apps/server}...\" --ui stream",
        "start:server": "pnpm --filter=@jshare/server start:production",
        "start:staging": "pnpm --filter=@jshare/mobile start:staging",
        "db:migrate:deploy": "pnpm --filter=@jshare/db db:migrate:deploy",
        "storybook": "pnpm --filter=@jshare/mobile run:ios:storybook",
        "fullcheck": "turbo typecheck test lint --ui stream",
        "turbo:clean": "turbo daemon clean",
        "build:mobile": "turbo build --filter=\"...{./apps/mobile}\"",
        "format:write": "prettier './**/*.{js,jsx,ts,tsx,json}' --write",
        "format:check": "prettier './**/*.{js,jsx,ts,tsx,json}' --check",
        "inbox": "open http://127.0.0.1:54324/monitor",
        "studio": "open http://127.0.0.1:54323",
        "create:package": "tsx ./scripts/create-package.ts",
        "nuke": "pnpm cache delete && rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf apps/*/node_modules && pnpm i",
        "db:reset": "pnpm --filter '@jshare/db' db:migrate:reset",
        "update-deps": "pnpm update --interactive --recursive --latest"
    },
    "type": "module",
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "catalog:",
        "prettier": "catalog:",
        "tsx": "catalog:",
        "turbo": "catalog:",
        "typescript": "catalog:",
        "zx": "catalog:"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "@babel/*",
                "expo-modules-*",
                "typescript"
            ]
        }
    },
    "packageManager": "pnpm@9.12.1"
}
