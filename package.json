{
    "private": true,
    "name": "@jshare/monorepo",
    "scripts": {
        "dev": "turbo watch dev",
        "dev:mobile": "turbo watch dev --filter=\"{./apps/mobile}...\"",
        "dev:web": "turbo watch dev --filter=\"{./apps/web}...\"",
        "lint": "turbo lint",
        "test": "turbo test",
        "build": "turbo build",
        "build:mobile": "turbo build --filter=\"...{./apps/mobile}\"",
        "build:web": "turbo build --filter=\"...{./apps/web}\"",
        "format": "prettier --write ./apps ./packages"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
        "prettier": "3.3.3",
        "turbo": "^2.1.3",
        "typescript": "^4.9.5"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "@babel/*",
                "expo-modules-*",
                "typescript"
            ]
        }
    },
    "packageManager": "pnpm@9.10.0+sha512.73a29afa36a0d092ece5271de5177ecbf8318d454ecd701343131b8ebc0c1a91c487da46ab77c8e596d6acf1461e3594ced4becedf8921b074fbd8653ed7051c"
}
