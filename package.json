{
    "private": true,
    "name": "@jshare/monorepo",
    "author": "Juuso Lappalainen <hello@juiceo.me>",
    "description": "Monorepo for the JShare app",
    "scripts": {
        "dev": "turbo watch dev --filter=\"{./apps/mobile}...\"",
        "dev:storybook": "turbo watch dev:storybook --filter=\"{./apps/mobile}...\"",
        "dev:server": "turbo watch dev --filter=\"{./apps/server}...\"",
        "lint": "turbo lint",
        "typecheck": "turbo typecheck",
        "test": "turbo test",
        "build": "turbo build",
        "fullcheck": "pnpm lint && pnpm typecheck && pnpm test",
        "build:mobile": "turbo build --filter=\"...{./apps/mobile}\"",
        "turbo:clean": "turbo daemon clean",
        "format:write": "prettier './**/*.{js,jsx,ts,tsx,json}' --write",
        "format:check": "prettier './**/*.{js,jsx,ts,tsx,json}' --check",
        "inbox": "open http://127.0.0.1:54324/monitor",
        "studio": "open http://127.0.0.1:54323",
        "create:package": "tsx ./scripts/create-package.ts",
        "nuke": "pnpm cache delete && rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf apps/*/node_modules && pnpm i",
        "db:reset": "pnpm --filter '@jshare/db' db:migrate:reset",
        "update-deps": "pnpm update --interactive --recursive --latest"
    },
    "type": "module",
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
        "prettier": "^3.3.3",
        "tsx": "^4.19.2",
        "turbo": "^2.1.3",
        "typescript": "^5.6.3",
        "zx": "^8.2.2"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "@babel/*",
                "expo-modules-*",
                "typescript"
            ]
        }
    },
    "packageManager": "pnpm@9.10.0+sha512.73a29afa36a0d092ece5271de5177ecbf8318d454ecd701343131b8ebc0c1a91c487da46ab77c8e596d6acf1461e3594ced4becedf8921b074fbd8653ed7051c"
}
