{
    "private": true,
    "name": "@jshare/mobile",
    "description": "JShare mobile app",
    "license": "MIT",
    "version": "1.0.0",
    "main": "expo-router/entry",
    "scripts": {
        "dev": "expo run:ios",
        "dev:storybook": "EXPO_PUBLIC_STORYBOOK_ENABLED=true expo run:ios",
        "lint": "eslint --ext js,ts,tsx . --max-warnings=0",
        "build": "expo export --output-dir ./build --platform all",
        "start": "expo start",
        "android": "expo run:android",
        "ios": "expo run:ios",
        "eas-build-post-install": "pnpm run -w build:mobile",
        "typecheck": "tsc --noEmit",
        "storybook-generate": "sb-rn-get-stories"
    },
    "dependencies": {
        "@expo/metro-runtime": "catalog:",
        "@gorhom/bottom-sheet": "catalog:",
        "@hookform/resolvers": "catalog:",
        "@jshare/common": "workspace:*",
        "@jshare/env": "workspace:*",
        "@jshare/prisma": "workspace:*",
        "@jshare/theme": "workspace:*",
        "@react-native-async-storage/async-storage": "catalog:",
        "@react-native-community/netinfo": "catalog:",
        "@supabase/supabase-js": "catalog:",
        "@tanstack/react-query": "catalog:",
        "@trpc/client": "catalog:",
        "@trpc/react-query": "catalog:",
        "@trpc/server": "catalog:",
        "dayjs": "^1.11.13",
        "expo": "catalog:",
        "expo-constants": "catalog:",
        "expo-dev-client": "catalog:",
        "expo-font": "catalog:",
        "expo-image": "catalog:",
        "expo-image-picker": "catalog:",
        "expo-linear-gradient": "catalog:",
        "expo-linking": "catalog:",
        "expo-router": "catalog:",
        "expo-status-bar": "catalog:",
        "expo-updates": "catalog:",
        "identicon.js": "catalog:",
        "jotai": "catalog:",
        "lodash": "catalog:",
        "lucide-react-native": "catalog:",
        "md5": "catalog:",
        "react": "catalog:",
        "react-dom": "catalog:",
        "react-hook-form": "catalog:",
        "react-native": "catalog:",
        "react-native-country-flag": "catalog:",
        "react-native-gesture-handler": "catalog:",
        "react-native-get-random-values": "catalog:",
        "react-native-keyboard-controller": "catalog:",
        "react-native-reanimated": "catalog:",
        "react-native-safe-area-context": "catalog:",
        "react-native-screens": "catalog:",
        "react-native-svg": "catalog:",
        "react-native-url-polyfill": "catalog:",
        "react-native-uuid": "catalog:",
        "react-native-web": "catalog:",
        "superjson": "catalog:",
        "validator": "catalog:"
    },
    "devDependencies": {
        "@babel/core": "catalog:",
        "@jshare/eslint-config": "workspace:*",
        "@jshare/server": "workspace:*",
        "@jshare/tsconfig": "workspace:*",
        "@react-native-community/datetimepicker": "^8.2.0",
        "@react-native-community/slider": "^4.5.5",
        "@storybook/addon-actions": "^8.4.2",
        "@storybook/addon-controls": "^8.4.2",
        "@storybook/addon-essentials": "^8.4.2",
        "@storybook/addon-links": "^8.4.2",
        "@storybook/addon-ondevice-actions": "^8.4.2",
        "@storybook/addon-ondevice-backgrounds": "^8.4.2",
        "@storybook/addon-ondevice-controls": "^8.4.2",
        "@storybook/addon-ondevice-notes": "^8.4.2",
        "@storybook/core": "^8.4.2",
        "@storybook/react": "^8.4.2",
        "@storybook/react-native": "^8.4.2",
        "@storybook/test": "^8.4.2",
        "@types/identicon.js": "catalog:",
        "@types/md5": "catalog:",
        "@types/react": "catalog:",
        "@types/react-dom": "catalog:",
        "@types/validator": "catalog:",
        "babel-loader": "^8.4.1",
        "babel-preset-expo": "catalog:"
    },
    "expo": {
        "install": {
            "exclude": [
                "@react-native-async-storage/async-storage",
                "@react-native-community/datetimepicker"
            ]
        }
    },
    "eslintConfig": {
        "extends": [
            "@jshare/eslint-config"
        ],
        "ignorePatterns": [
            "node_modules",
            "build",
            ".expo",
            ".expo-shared"
        ]
    }
}
