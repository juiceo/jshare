{
    "cli": {
        "promptToConfigurePushNotifications": false
    },
    "build": {
        "monorepo": {
            "pnpm": "9.10.0",
            "cache": {
                "key": "turbo",
                "paths": ["../../node_modules/.cache/turbo"]
            },
            "env": {
                "EXPO_USE_FAST_RESOLVER": "true"
            }
        },
        "development": {
            "extends": "monorepo",
            "distribution": "internal",
            "android": {
                "buildType": "apk"
            },
            "ios": {
                "resourceClass": "m-medium"
            }
        },
        "staging": {
            "extends": "monorepo",
            "distribution": "internal",
            "environment": "preview",
            "android": {
                "buildType": "apk"
            },
            "ios": {
                "resourceClass": "m-medium"
            },
            "cache": {
                "disabled": true
            }
        },
        "production": {
            "extends": "monorepo",
            "distribution": "store",
            "android": {
                "buildType": "app-bundle"
            },
            "ios": {
                "resourceClass": "m-medium"
            }
        }
    }
}
