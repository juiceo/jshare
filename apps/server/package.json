{
    "private": true,
    "name": "@jshare/server",
    "version": "1.0.0",
    "description": "JShare server",
    "license": "MIT",
    "main": "src/index.ts",
    "exports": {
        ".": {
            "types": "./src/client.ts",
            "default": null
        }
    },
    "scripts": {
        "dev": "tsx watch --env-file=.env  --clear-screen=false ./src/index.ts",
        "build": "esbuild src/index.ts --bundle --outfile=build/index.js --platform=node",
        "start": "env-cmd -f .env node ./build/index.js",
        "start:production": "node ./build/index.js",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [],
    "dependencies": {
        "@jshare/common": "workspace:*",
        "@jshare/db": "workspace:*",
        "@supabase/supabase-js": "catalog:",
        "@trpc/server": "catalog:",
        "@types/pug": "^2.0.10",
        "blurhash": "catalog:",
        "dayjs": "catalog:",
        "express": "catalog:",
        "jsonwebtoken": "catalog:",
        "pug": "^3.0.3",
        "sharp": "catalog:",
        "shortid": "catalog:",
        "superjson": "catalog:",
        "tsup": "catalog:",
        "uuid": "catalog:"
    },
    "devDependencies": {
        "@jshare/eslint-config": "workspace:*",
        "@jshare/tsconfig": "workspace:*",
        "@types/express": "catalog:",
        "@types/jsonwebtoken": "catalog:",
        "@types/shortid": "catalog:",
        "env-cmd": "catalog:",
        "tsx": "catalog:"
    },
    "eslintConfig": {
        "extends": "@jshare/eslint-config",
        "ignorePatterns": [
            "node_modules",
            "build"
        ]
    }
}
