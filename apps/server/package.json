{
    "private": true,
    "name": "@jshare/server",
    "version": "1.0.0",
    "description": "JShare server",
    "license": "MIT",
    "main": "src/index.ts",
    "exports": {
        ".": {
            "types": "./build/index.d.ts",
            "default": null
        }
    },
    "scripts": {
        "dev": "tsx watch --env-file=.env  --clear-screen=false ./src/index.ts",
        "build": "tsup-node",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [],
    "dependencies": {
        "@jshare/common": "workspace:*",
        "@jshare/db": "workspace:*",
        "@supabase/supabase-js": "catalog:",
        "@trpc/server": "catalog:",
        "blurhash": "catalog:",
        "express": "catalog:",
        "jsonwebtoken": "catalog:",
        "sharp": "catalog:",
        "shortid": "^2.2.17",
        "superjson": "catalog:",
        "uuid": "catalog:"
    },
    "devDependencies": {
        "@jshare/eslint-config": "workspace:*",
        "@jshare/tsconfig": "workspace:*",
        "@types/express": "catalog:",
        "@types/jsonwebtoken": "catalog:",
        "@types/shortid": "^2.2.0",
        "tsx": "catalog:",
        "tsup": "catalog:"
    },
    "eslintConfig": {
        "extends": "@jshare/eslint-config",
        "ignorePatterns": [
            "node_modules",
            "build"
        ]
    }
}
