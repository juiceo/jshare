{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
        "lint": {
            "outputs": []
        },
        "typecheck": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "test": {
            "dependsOn": ["build"],
            "inputs": ["**/*.{ts,tsx,js,jsx}"]
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "build/**", "node_modules/.cache/metro/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build"]
        }
    }
}
