{
    "private": true,
    "name": "@jshare/theme",
    "version": "1.0.0",
    "description": "JShare theme",
    "license": "MIT",
    "main": "build/index.js",
    "scripts": {
        "lint": "eslint --ext js,ts,tsx .",
        "build": "tsup --clean",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@expo-google-fonts/nunito": "catalog:",
        "@expo-google-fonts/poppins": "catalog:",
        "expo-font": "catalog:",
        "lodash": "catalog:",
        "react": "catalog:",
        "react-native": "catalog:",
        "@types/chroma-js": "catalog:",
        "chroma-js": "catalog:"
    },
    "devDependencies": {
        "@jshare/eslint-config": "workspace:*",
        "@jshare/tsconfig": "workspace:*",
        "@types/lodash": "catalog:",
        "@types/chroma-js": "catalog:",
        "tsup": "catalog:"
    },
    "eslintConfig": {
        "extends": "@jshare/eslint-config",
        "ignorePatterns": [
            "node_modules",
            "build"
        ]
    }
}
