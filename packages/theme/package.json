{
    "private": true,
    "name": "@jshare/theme",
    "version": "1.0.0",
    "description": "JShare theme",
    "author": "Juuso Lappalainen <hello@juiceo.me>",
    "license": "MIT",
    "main": "build/index.js",
    "scripts": {
        "lint": "eslint --ext js,ts,tsx .",
        "build": "tsup-node",
        "watch": "tsup-node --watch",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@expo-google-fonts/nunito": "^0.2.3",
        "@expo-google-fonts/poppins": "^0.2.3",
        "@jshare/eslint-config": "workspace:*",
        "@jshare/tsconfig": "workspace:*",
        "@types/lodash": "^4.17.10",
        "expo-font": "^12.0.10",
        "lodash": "^4.17.21",
        "react": "18.2.0",
        "react-native": "^0.74.2",
        "tsup": "^8.3.0",
        "@types/chroma-js": "^2.4.4",
        "chroma-js": "^3.1.1"
    },
    "peerDependencies": {
        "@expo-google-fonts/nunito": "^0.2.3",
        "@expo-google-fonts/poppins": "^0.2.3",
        "expo-font": "^12.0.10",
        "lodash": "^4.17.21",
        "react": "^18.2.0",
        "react-native": "^0.74.2",
        "@types/chroma-js": "^2.4.4",
        "chroma-js": "^3.1.1"
    },
    "eslintConfig": {
        "extends": "@jshare/eslint-config",
        "ignorePatterns": [
            "node_modules",
            "build"
        ]
    },
    "tsup": {
        "entry": [
            "src/index.ts"
        ],
        "outDir": "build",
        "sourcemap": true,
        "dts": true,
        "external": [
            "react",
            "react-native",
            "react-native-web"
        ]
    }
}
