{
    "name": "@jshare/db",
    "version": "1.0.0",
    "description": "JShare database client",
    "exports": {
        "./prisma": "./build/prisma/index.js",
        "./zenstack": "./build/zenstack/index.js",
        "./zod": "./build/zod/index.js",
        "./models": "./build/zenstack/models.d.ts"
    },
    "keywords": [],
    "license": "MIT",
    "scripts": {
        "build": "zenstack generate --output ./build/zenstack",
        "db:migrate:dev": "npx prisma migrate dev",
        "db:migrate:reset": "npx prisma migrate reset",
        "db:migrate:deploy": "npx prisma migrate deploy",
        "db:inspect": "npx prisma studio"
    },
    "devDependencies": {
        "@faker-js/faker": "catalog:",
        "@jshare/env": "workspace:*",
        "@jshare/tsconfig": "workspace:*",
        "@prisma/client": "catalog:",
        "@types/moment": "catalog:",
        "lodash": "catalog:",
        "moment": "catalog:",
        "prisma": "catalog:",
        "zenstack": "^2.11.2"
    },
    "eslintConfig": {
        "extends": "@jshare/eslint-config",
        "ignorePatterns": [
            "node_modules",
            "build",
            "src/prisma"
        ]
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "dependencies": {
        "@zenstackhq/runtime": "^2.11.2"
    }
}
