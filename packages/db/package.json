{
    "private": true,
    "name": "@jshare/db",
    "version": "1.0.0",
    "description": "JShare DB configuration",
    "author": "Juuso Lappalainen <hello@juiceo.me>",
    "license": "MIT",
    "main": "build/index.js",
    "files": [
        "build"
    ],
    "scripts": {
        "lint": "eslint --ext js,ts,tsx .",
        "build": "tsup-node",
        "watch": "tsup-node --watch",
        "push:schema": "npx instant-cli push-schema -y",
        "push:perms": "npx instant-cli push-perms -y",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@instantdb/core": "^0.14.19",
        "@jshare/eslint-config": "workspace:*",
        "@jshare/tsconfig": "workspace:*",
        "@types/lodash": "^4.17.10",
        "dotenv": "^16.4.5",
        "instant-cli": "^0.14.19",
        "tsup": "^8.3.0"
    },
    "peerDependencies": {
        "@instantdb/core": "^0.14.19",
        "lodash": "^4.17.21"
    },
    "eslintConfig": {
        "extends": "@jshare/eslint-config",
        "ignorePatterns": [
            "node_modules",
            "build"
        ]
    }
}
