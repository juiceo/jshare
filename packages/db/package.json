{
    "name": "@jshare/db",
    "version": "1.0.0",
    "description": "JShare database client",
    "main": "build/index.ts",
    "exports": {
        ".": "./build/index.ts",
        "./server": "./build/server.ts"
    },
    "keywords": [],
    "license": "MIT",
    "scripts": {
        "generate": "zenstack generate --output ./src/generated",
        "build": "rsync -a --delete ./src/ ./build/",
        "db:migrate:dev": "npx prisma migrate dev",
        "db:migrate:reset": "npx prisma migrate reset",
        "db:migrate:deploy": "npx prisma migrate deploy",
        "db:inspect": "npx prisma studio"
    },
    "devDependencies": {
        "@faker-js/faker": "catalog:",
        "@jshare/tsconfig": "workspace:*",
        "@prisma/client": "catalog:",
        "lodash": "catalog:",
        "prisma": "catalog:",
        "zenstack": "^2.11.2"
    },
    "eslintConfig": {
        "extends": "@jshare/eslint-config",
        "ignorePatterns": [
            "node_modules",
            "build",
            "src/prisma"
        ]
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "dependencies": {
        "@zenstackhq/runtime": "^2.11.2"
    }
}
