{
    "private": true,
    "name": "@jshare/db",
    "version": "1.0.0",
    "description": "JShare DB configuration",
    "author": "Juuso Lappalainen <hello@juiceo.me>",
    "license": "MIT",
    "main": "index.ts",
    "files": [
        "instant.perms.ts",
        "instant.schema.ts",
        "index.ts"
    ],
    "scripts": {
        "lint": "eslint --ext js,ts,tsx .",
        "push:schema": "npx instant-cli push-schema -y",
        "push:perms": "npx instant-cli push-perms -y"
    },
    "devDependencies": {
        "@jshare/eslint-config": "workspace:*",
        "@jshare/tsconfig": "workspace:*",
        "@types/lodash": "^4.17.10",
        "instant-cli": "^0.14.19",
        "tsup": "^8.3.0"
    },
    "peerDependencies": {
        "lodash": "^4.17.21"
    },
    "eslintConfig": {
        "extends": "@jshare/eslint-config",
        "ignorePatterns": [
            "node_modules",
            "build"
        ]
    },
    "tsup": {
        "entry": [
            "index.ts"
        ],
        "outDir": "build",
        "sourcemap": true,
        "dts": true,
        "external": []
    },
    "dependencies": {
        "@instantdb/core": "^0.14.19",
        "@types/chroma-js": "^2.4.4",
        "chroma-js": "^3.1.1"
    }
}
